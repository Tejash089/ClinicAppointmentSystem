@model ClinicAppointmentSystem.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">Appointment Details</h2>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DateTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateTime)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold">Patient</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Patient.Contact)</dd>

                <dt class="col-sm-3 fw-bold">Doctor</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Doctor.Contact)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>
